---
import Base from '../../layouts/Base.astro';
import Seo from '../../components/Seo.astro';
const title = 'Безопасность и согласие — базовый гайд';
const description = 'Как говорить о желаниях, границах и безопасности. 18+.';
const url = 'https://ovzroslom.ru/blog/bezopasnost-i-soglasie/';
const faq = [
  { q: 'Что такое информированное согласие?', a: 'Добровольное согласие, данное без давления, с правом отмены в любой момент.' },
  { q: 'Какие сигнальные слова использовать?', a: 'Используйте систему «зеленый/желтый/красный» для оценки комфорта.' }
];
const ldArticle = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  author: { '@type': 'Organization', name: 'ovzroslom.ru' },
  publisher: { '@type': 'Organization', name: 'ovzroslom.ru' },
  mainEntityOfPage: url
};
const ldFAQ = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faq.map(i => ({
    '@type': 'Question',
    name: i.q,
    acceptedAnswer: { '@type': 'Answer', text: i.a }
  }))
};
---
<Base {title} {description}>
  <Seo {title} {description} {url} image="/og/og-default.jpg"
       breadcrumbs={[{ name: 'Главная', url: '/' }, { name: 'Блог', url: '/blog/' }, { name: 'Безопасность и согласие', url: '/blog/bezopasnost-i-soglasie/' }]} />
  <script type="application/ld+json">{JSON.stringify(ldArticle)}</script>
  <script type="application/ld+json">{JSON.stringify(ldFAQ)}</script>
  <h1 class="text-3xl font-bold mb-4">{title}</h1>
  <p class="opacity-80">{description}</p>
  <h2 class="text-xl mt-6 mb-2">Главные принципы</h2>
  <ul class="list-disc pl-5 space-y-1">
    <li>Согласие добровольное, информированное и обратимое.</li>
    <li>Обсуждайте границы и стоп‑слова заранее.</li>
    <li>Используйте защиту и проверенные источники информации.</li>
  </ul>
</Base>
