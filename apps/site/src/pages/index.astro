---
import Base from '../layouts/Base.astro';
import AgeGate from '../components/AgeGate.astro';
import Seo from '../components/Seo.astro';
const title = 'ovzroslom.ru — интимное здоровье, секс‑образование и безопасные практики';
const description = 'Образовательные статьи по интимному здоровью, согласие и безопасность. 18+. Без порнографии.';
const url = 'https://ovzroslom.ru/';
---
<Base {title} {description}>
  <Seo {title} {description} {url} image="/og/og-default.jpg" breadcrumbs={[{ name: 'Главная', url: '/' }]} />
  <AgeGate>
    <h1 class="text-3xl md:text-5xl font-bold text-primary" class="text-3xl font-bold mb-4">ovzroslom.ru — портал об интимном здоровье</h1>
    <p class="mt-4 text-lg text-slate-600 dark:text-slate-300" class="opacity-90 mb-6">Образовательные материалы о теле, сексе, согласии и безопасности.</p>
    <ul class="list-disc pl-5 space-y-2">
      <li><a href="/blog/">Статьи и гайды</a></li>
      <li><a href="/glossary/">Глоссарий</a></li>
      <li><a href="/about/">О проекте</a></li>
    </ul>
  </AgeGate>
</Base>
