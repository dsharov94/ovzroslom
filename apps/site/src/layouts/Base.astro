---
import "../styles/global.css";
const { title = 'ovzroslom.ru — интимное здоровье и секс‑образование', description = 'Образовательные статьи. 18+.' } = Astro.props;
---
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen antialiased">
    <main class="max-w-3xl mx-auto p-6">
      <slot />
      <footer class="mt-16 opacity-70 text-sm">
        <p>© {new Date().getFullYear()} ovzroslom.ru · 18+ · Информация не заменяет совет врача.</p>
      </footer>
    </main>
  </body>
</html>
